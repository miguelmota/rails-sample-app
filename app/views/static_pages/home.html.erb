<% provide(:title, 'Home') %>

<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <span class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </span>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>StaticPages#home</h1>
    <p>Find me in app/views/static_pages/home.html.erb</p>
    <p>Sample App</p>

    <%= link_to "Sign up now!", "signup_path", class: 'btn btn-large btn-primary'  %>
  </div>

  <!--
  <%= link_to image_tag("/assets/rails.png", alt: "Rails"), "https://rubyonrails.org/"  %>
  -->
<% end %>
